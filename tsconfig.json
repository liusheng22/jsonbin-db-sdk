{
  "compilerOptions": {
    "target": "es2016",
    "experimentalDecorators": true,
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "core/*": ["packages/core/*"],
      "hooks/*": ["packages/core/hooks/*"],
      "types/*": ["packages/core/types/*"],
      "utils/*": ["packages/core/utils/*"],
      "helper/*": ["packages/core/helper/*"],
      "constants/*": ["packages/core/constants/*"],
      "playground/*": ["packages/playground/*"]
    },
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist"]
}
